<li>
  <div class='progress-bubble hint--right hint--no-animate' data-hint="{{project.tooltip}}">
    {{progress-bubble workflowStateShort=project.workflowStateShort percentFunded=project.percentFunded percentDuration=project.percentDuration}}
  </div>
  <div class="project-info">
    <div class='id'>
      {{project.id}}
    </div>
    <div class='title'>
      <a {{bind-attr href=project.url}} target=_blank>
        {{#if project.title}}
          {{project.title}}
        {{else}}
          Untitled
        {{/if}}
      </a>
    </div>
    <div {{bind-attr class=':state project.workflowStateShort'}}>
      {{project.workflowState}}
    </div>
    {{#if project.lastReviewer}}
      <div>
        Last Review: {{project.lastReviewer}}
        {{#if project.lastReviewDocumentUrl}}
          <span>
            <a {{bind-attr href=project.lastReviewDocumentUrl}} target=_blank>
              ðŸ“„
            </a>
          </span>
        {{/if}}
      </div>
    {{/if}}
    {{project.location}}
  </div>
</li>
